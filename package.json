{
    "name": "bunup",
    "description": "âš¡ A blazing-fast build tool for your libraries built with Bun.",
    "version": "0.4.52",
    "license": "MIT",
    "author": "Arshad Yaseen <m@arshadyaseen.com> (https://arshadyaseen.com)",
    "maintainers": [
        {
            "name": "Arshad Yaseen",
            "email": "m@arshadyaseen.com",
            "url": "https://arshadyaseen.com"
        }
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arshad-yaseen/bunup.git"
    },
    "homepage": "https://bunup.dev",
    "funding": "https://github.com/sponsors/arshad-yaseen",
    "keywords": ["bun", "bunup", "bun-bundler"],
    "types": "./dist/index.d.ts",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "files": ["dist"],
    "bin": {
        "bunup": "./dist/cli.mjs"
    },
    "scripts": {
        "build": "bunup",
        "dev": "bunup --watch",
        "build:docs": "bun run --cwd docs build",
        "create-bunup": "create-bunup",
        "dev:docs": "bun run --cwd docs dev",
        "test-build": "bun run --cwd tests build",
        "test": "bun test",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format .",
        "format:fix": "biome format --write .",
        "tsc": "tsc --noEmit",
        "release": "bumpp -r --commit --push --tag",
        "release:ci": "bumpp patch -r --commit --push --tag --yes",
        "publish:ci": "bun run --filter bunup --filter create-bunup publish --access public --no-git-checks",
        "benchmark": "bun run --cwd benchmarks benchmark",
        "upgrade-deps": "pnpx taze -r -w && bun install && git add . && git commit -m 'chore: upgrade deps' && bun run release:ci",
        "prepare": "husky",
        "fetch-latest-dep-versions": "pnpm -C create-bunup fetch-latest-dep-versions"
    },
    "workspaces": ["tests", "docs", "benchmarks", "create-bunup"],
    "dependencies": {
        "chokidar": "^4.0.3",
        "coffi": "^0.1.23",
        "oxc-resolver": "^5.0.1",
        "oxc-transform": "^0.58.1",
        "rolldown": "1.0.0-beta.7",
        "rolldown-plugin-dts": "^0.7.0",
        "tinyexec": "^1.0.1",
        "ts-import-resolver": "^0.1.10"
    },
    "peerDependencies": {
        "typescript": ">=4.5.0"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@types/bun": "^1.2.5",
        "bumpp": "^10.1.0",
        "bunup": "^0.4.23",
        "create-bunup": "workspace:create-bunup",
        "husky": "^9.1.7",
        "typescript": "^5.8.3"
    }
}
