{
	"name": "bunup",
	"description": "âš¡ A blazing-fast build tool for your libraries built with Bun.",
	"version": "0.8.72",
	"type": "module",
	"files": [
		"dist"
	],
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./plugins": {
			"import": {
				"types": "./dist/plugins.d.ts",
				"default": "./dist/plugins.js"
			}
		}
	},
	"license": "MIT",
	"author": "Arshad Yaseen <m@arshadyaseen.com> (https://arshadyaseen.com)",
	"maintainers": [
		{
			"name": "Arshad Yaseen",
			"email": "m@arshadyaseen.com",
			"url": "https://arshadyaseen.com"
		}
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/arshad-yaseen/bunup.git"
	},
	"funding": "https://github.com/sponsors/arshad-yaseen",
	"homepage": "https://bunup.dev",
	"keywords": [
		"bun",
		"bunup",
		"bun-bundler"
	],
	"bin": {
		"bunup": "dist/cli/index.js"
	},
	"dependencies": {
		"@clack/prompts": "^0.10.1",
		"chokidar": "^4.0.3",
		"coffi": "^0.1.31",
		"fast-deep-equal": "^3.1.3",
		"giget": "^2.0.0",
		"picocolors": "^1.1.1",
		"replace-in-file": "^8.3.0",
		"tinyexec": "^1.0.1",
		"typeroll": "^0.6.21"
	},
	"devDependencies": {
		"@babel/types": "^7.28.1",
		"@biomejs/biome": "2.0.0",
		"@types/bun": "^1.2.19",
		"bumpp": "^10.2.0",
		"husky": "^9.1.7",
		"lightningcss": "^1.30.1",
		"lint-staged": "^15.5.2",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0",
		"lightningcss": ">=1.17.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		},
		"lightningcss": {
			"optional": true
		}
	},
	"scripts": {
		"build": "bunx bunup@latest",
		"build:docs": "bun run --cwd docs build",
		"dev": "bunx bunup@latest --watch",
		"dev:docs": "bun run --cwd docs dev",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"prepare": "husky",
		"test": "bun test",
		"test-build": "bun run --cwd tests build",
		"tsc": "tsc --noEmit",
		"publish:ci": "bun publish --access public --no-git-checks",
		"release": "bumpp"
	},
	"lint-staged": {
		"*": "bun run format:fix && git add .",
		"src/**/*.(m|c)?(j|t)s": "bun run tsc"
	},
	"workspaces": [
		"docs",
		"tests"
	]
}
