{
	"name": "bunup-monorepo",
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@types/bun": "^1.3.0",
		"bumpp": "^10.3.1",
		"simple-git-hooks": "^2.13.1"
	},
	"scripts": {
		"prepublishOnly": "bun run build",
		"postinstall": "bun simple-git-hooks && cd packages/shared && bunx bunup@latest && cd ../dts && bunx bunup@latest",
		"build": "bun packages/bunup/src/cli/index.ts",
		"build:docs": "bun run --cwd docs build",
		"dev": "bun packages/bunup/src/cli/index.ts --watch",
		"dev:docs": "bun run --cwd docs dev",
		"lint": "biome check",
		"format": "biome format --write",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:build": "bun run --cwd packages/bunup/test build",
		"tsc": "tsc --noEmit",
		"release": "bumpp -r --commit --push --tag"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint"
	},
	"workspaces": [
		"docs",
		"packages/**"
	]
}
