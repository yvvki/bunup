{
	"name": "bunup-monorepo",
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@types/bun": "^1.2.21",
		"bumpp": "^10.2.3",
		"simple-git-hooks": "^2.13.1"
	},
	"scripts": {
		"prepublishOnly": "bun run build",
		"build": "bun packages/bunup/src/cli/index.ts",
		"build:docs": "bun run --cwd docs build",
		"dev": "bun packages/bunup/src/cli/index.ts --watch",
		"dev:docs": "bun run --cwd docs dev",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "bun test",
		"test:build": "bun run --cwd packages/bunup/test build",
		"tsc": "tsc --noEmit",
		"release": "bumpp -r --commit --push --tag",
		"prepare": "bun simple-git-hooks"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint"
	},
	"workspaces": [
		"docs",
		"examples/**",
		"packages/**"
	]
}
