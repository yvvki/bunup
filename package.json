{
	"name": "bunup-monorepo",
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@types/bun": "^1.3.0",
		"@typescript/native-preview": "^7.0.0-dev.20251021.1",
		"bumpp": "^10.3.1",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"prepublishOnly": "bun run build",
		"postinstall": "bun simple-git-hooks && cd packages/shared && bunx bunup@latest",
		"build": "bun packages/bunup/src/cli/index.ts",
		"build:docs": "bun run --cwd docs build",
		"dev": "bun packages/bunup/src/cli/index.ts --watch",
		"dev:docs": "bun run --cwd docs dev",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:build": "bun run --cwd packages/bunup/test build",
		"type-check": "bun run --filter './packages/*' type-check",
		"release": "bumpp -r --commit --push --tag"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint && bun run type-check"
	},
	"workspaces": [
		"docs",
		"packages/**"
	]
}
