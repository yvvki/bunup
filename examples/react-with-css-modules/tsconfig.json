{
	"compilerOptions": {
		"jsx": "react-jsx",
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"declaration": true,
		"declarationMap": true,
		"isolatedDeclarations": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "bunup.config.ts"]
}
